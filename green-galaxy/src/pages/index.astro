---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Apollo_AiX">
  <main style="max-width: 960px; margin: 0 auto; padding: 4rem 1.5rem;">
    <h1 style="font-size: 3rem; margin: 0 0 0.5rem;">Apollo_AiX</h1>
    <p style="font-size: 1.25rem; opacity: 0.9; margin: 0 0 2rem;">
      AI Engineering • Applied Data Science • Automation
    </p>

    <section style="display: grid; gap: 1rem; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));">
      <a href="/projects" style="padding: 1.25rem; border: 1px solid rgba(255,255,255,0.15); border-radius: 14px; text-decoration: none;">
        <h2 style="margin: 0 0 0.5rem;">Projects</h2>
        <p style="margin: 0; opacity: 0.85;">Case studies, notebooks, and deployed demos.</p>
      </a>

      <a href="/about" style="padding: 1.25rem; border: 1px solid rgba(255,255,255,0.15); border-radius: 14px; text-decoration: none;">
        <h2 style="margin: 0 0 0.5rem;">About</h2>
        <p style="margin: 0; opacity: 0.85;">Your story: operator → AI builder.</p>
      </a>

      <a href="/contact" style="padding: 1.25rem; border: 1px solid rgba(255,255,255,0.15); border-radius: 14px; text-decoration: none;">
        <h2 style="margin: 0 0 0.5rem;">Contact</h2>
        <p style="margin: 0; opacity: 0.85;">Links to LinkedIn, GitHub, email.</p>
      </a>
    </section>
  </main>
</Layout>

